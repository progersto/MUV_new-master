<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_border_yellow"
    >



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/ic_status"
                    android:src="@drawable/ic_tick"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />
                <TextView

                    android:id="@+id/txtStatus"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@color/greenColor"
                    android:text="Completed"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/ic_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/ic_pick"
            android:src="@drawable/green_dot"
            android:layout_width="14dp"
            android:layout_height="14dp" />
        <LinearLayout

            android:layout_toRightOf="@id/ic_pick"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pick_up_head"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Pick Up"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPickUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pick_up_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum lorem"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>




    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/ic_drop"
            android:src="@drawable/red_dot"
            android:layout_width="14dp"
            android:layout_height="14dp" />
        <LinearLayout

            android:layout_toRightOf="@id/ic_drop"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/drop_head"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Drop Off"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDropOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pick_up_head"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Lorem ipsum lorem"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="dec 2018"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"

            android:paddingRight="10dp"
            android:background="@color/dull_golden"
            android:layout_alignParentRight="true"
            android:id="@+id/txtViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="View Details"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>