<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@drawable/splash_bg"
    >


    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        >

    <RelativeLayout
        android:layout_above="@+id/btn_wrapper"
        android:id="@+id/inner_wrapper_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/ivAnimLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            android:src="@drawable/logo" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/logoTxt"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivAnimLogo"
            android:src="@drawable/logo_txt" />

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_wrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_light"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/sign_in_button"
                android:clickable="true"
                android:focusable="true"
                >
                <TextView
                    android:textAllCaps="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:textColor="@color/light_black"
                    android:layout_centerInParent="true"
                    android:textSize="25dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/txtSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/square_yellow_border"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/yellow_light"
                    android:textSize="25dp" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:id="@+id/social_wrapper"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                >

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_red_border"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/imgGooglePlus"

                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:textAllCaps="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/google_plus"
                        android:textColor="@color/red_fn"
                        android:layout_centerInParent="true"
                        android:textSize="25dp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_blue_border"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/imgFacebook"

                    android:layout_marginLeft="5dp">
                    <TextView
                        android:textAllCaps="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/facebook"
                        android:textColor="@color/blue_fn"
                        android:layout_centerInParent="true"
                        android:textSize="25dp"
                        />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</ScrollView>