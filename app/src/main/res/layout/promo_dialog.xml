<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:background="@drawable/square_yellow_border"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    >

    <TextView
        android:id="@+id/promo_title"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="Enter Promo Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_below="@+id/promo_title"

        android:paddingBottom="2dp"
        android:textCursorDrawable="@null"
        android:id="@+id/email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="RIDE21"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:textColor="@color/yellow_light"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        android:textSize="30sp"

        />

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/email_field"
        android:background="@color/yellow_light"

        />

    <LinearLayout

        android:layout_below="@+id/bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/social_wrapper"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        >

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/square_red_border"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:id="@+id/cancel_btn"

            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:textAllCaps="true"
                android:clickable="false"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="@color/red_fn"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/square_green_border"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:id="@+id/ok_btn"

            android:layout_marginLeft="5dp">
            <TextView
                android:textAllCaps="true"
                android:clickable="false"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/greenColor"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                />

        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>