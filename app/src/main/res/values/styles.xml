<resources>
    <style name="customSpinnerTheme" parent="android:Widget.Spinner">
        <item name="colorControlNormal">#eaeaea</item>
        <item name="colorControlActivated">#0000ff</item>
        <item name="colorControlHighlight">#0ff000</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--Custom Rating Bar-->
    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>

    <style name="EditTextDialog" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/greenColor</item>
        <item name="android:textColorHint">@color/greenColorHint</item>
        <item name="colorControlActivated">@color/greenColor</item>
        <item name="colorControlNormal">@color/yellow_light</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/yellow_light</item>
        <item name="android:textColorSecondary">@color/yellow_light</item>
    </style>
    <style name="CustomYellowTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColor">@color/yellow_light</item>

    </style>

    <style name="CustomWhiteTextTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColor">@color/white</item>

    </style>
</resources>
